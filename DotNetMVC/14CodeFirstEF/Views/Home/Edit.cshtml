@model _14CodeFirstEF.Models.Emp

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
         <form asp-controller="Home" asp-action="Edit" class="form-control">
             <input asp-for="EId" hidden/>
                <label asp-for="EName" class="form-control"></label>
                <input asp-for="@Model.EName" class="form-control" placeholder="Enter Name" value="@Model.EName"/>
                <br />
                <label asp-for="EAddress" class="form-control"></label>
                <input asp-for="@Model.EAddress" class="form-control" placeholder="Enter Address"/>
                <label asp-for="ESalary" class="form-label"></label>
                <input asp-for="@Model.ESalary" class="form-control"
                       placeholder="Enter salary" />
                <br />
                <input type="submit" class="btn btn-primary" value="Update" />
         </form>
        </div>
    </div>
</div>